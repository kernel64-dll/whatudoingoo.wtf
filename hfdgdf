<script>
    const shootingStars = [];

    function drawStars() {
      requestAnimationFrame(drawStars);
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      for (const s of stars) {
        const opacity = 0.5 + Math.sin((s.twinkle += 0.02)) * 0.3;
        ctx.beginPath();
        ctx.arc(s.x, s.y, s.r, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(255,255,255,${opacity})`;
        ctx.fill();
      }

      if (Math.random() < 0.005) {
        shootingStars.push({
          x: Math.random() * canvas.width,
          y: Math.random() * canvas.height / 2,
          dx: -3 - Math.random() * 2,
          dy: 2 + Math.random() * 1,
          len: 60 + Math.random() * 30
        });
      }

      for (let i = shootingStars.length - 1; i >= 0; i--) {
        const s = shootingStars[i];
        ctx.strokeStyle = 'white';
        ctx.lineWidth = 1;
        ctx.beginPath();
        ctx.moveTo(s.x, s.y);
        ctx.lineTo(s.x + s.len, s.y - s.len);
        ctx.stroke();
        s.x += s.dx;
        s.y += s.dy;
        s.len *= 0.98;
        if (s.x + s.len < 0 || s.y > canvas.height) shootingStars.splice(i, 1);
      }
    }

    drawStars();

    overlay.style.opacity = 0;
    setTimeout(() => {
      overlay.style.display = "none";
      main.classList.add("visible");
      document.body.style.overflow = "auto";

      volumeContainer.style.visibility = "visible";
      volumeContainer.style.opacity = 1;
      volumeContainer.style.pointerEvents = "auto";
    }, 900);

    volumeSlider.addEventListener("input", () => {
      audioEl.volume = parseFloat(volumeSlider.value);
    });

    volumeButton.addEventListener("click", (e) => {
      e.stopPropagation();
      volumeSlider.classList.toggle("visible");
    });
  

  window.addEventListener("resize", () => {
    const canvas = document.getElementById("bgCanvas");
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
  });

  VANTA.GLOBE({
    el: "#vanta-bg",
